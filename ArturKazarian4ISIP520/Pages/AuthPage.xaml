<Window x:Class="ArturKazarian4ISIP520.Pages.AuthPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArturKazarian4ISIP520.Pages"
        mc:Ignorable="d"
        Title="AuthPage" Height="450" Width="800" Background="AliceBlue">
    <Grid>
        <TextBlock Text="Добро пожаловать!" HorizontalAlignment="Center" Margin="291,80,288,287" FontSize="25" FontFamily="Times New Roman" Width="213"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="149" Margin="291,158,291,112">
            <TextBlock Name="Login" Text="Логин"/>

            <TextBox x:Name="txtUsername" Margin="5" Width="200"/>

            <TextBlock Name="Parol" Text="Пароль"/>

            <PasswordBox x:Name="txtPassword" Margin="5" Width="200"/>
            <Button Content="Войти" Click="btnLogin_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
