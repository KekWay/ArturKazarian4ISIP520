<Window x:Class="ArturKazarian4ISIP520.Pages.EditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArturKazarian4ISIP520.Pages"
        mc:Ignorable="d"
        Title="EditPage" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название мероприятия" Margin="269,0,275,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtVenue" Margin="269,0,275,10"/>
            <DatePicker x:Name="dpDate" Margin="269,0,275,10"/>
            <TextBlock Text="Продолжительность мероприятия" Margin="269,0,275,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtNumberOfVisitors" Margin="269,0,275,10"/>
            <TextBlock Text="Выбор города" Margin="269,0,275,10" HorizontalAlignment="Center"/>
            <ComboBox x:Name="cmbFormOfEvent" Margin="315,0,307,10" ItemsSource="{Binding City.Name}"/>
            <Button Content="Сохранить" Click="btnSave_Click" Margin="341,0,335,0" />
        </StackPanel>
    </Grid>
</Window>
